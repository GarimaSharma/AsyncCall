<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get"
            android:id="@+id/getCall" android:layout_gravity="center" android:onClick="getCall"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:id="@+id/post" android:layout_gravity="center" android:onClick="postCall"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="enter url"
            android:id="@+id/url"/>
    <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="get"
            android:id="@+id/getForUrl" android:checked="false" android:onClick="getForUrl"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="post"
            android:id="@+id/postForUrl" android:layout_gravity="left|center_vertical" android:checked="false"
            android:onClick="postForUrl" android:longClickable="true"/>
</LinearLayout>

